<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pppprojectakhir.controller.HelloController">
    <HBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <ComboBox fx:id="itemComboBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Nasi Uduk"/>
                    <String fx:value="Nasi Ayam Bakar"/>
                    <String fx:value="Nasi Rawon"/>
                    <String fx:value="Soto Ayam"/>
                    <String fx:value="Soto Babat"/>
                    <String fx:value="Nasi goreng"/>
                    <String fx:value="Sate Ayam"/>
                    <String fx:value="Sate Kambing"/>
                    <String fx:value="Gule Kambing"/>
                    <String fx:value="Nasi Campur"/>
                </FXCollections>
            </items>
        </ComboBox>
        <TextField fx:id="itemPriceField" promptText="Item Price" />
        <Button text="Tambahkan" onAction="#addItem"/>
    </HBox>
    <ListView fx:id="cartListView"/>
    <HBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <ComboBox fx:id="discountComboBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Tanpa Diskon"/>
                    <String fx:value="Diskon 10%"/>
                    <String fx:value="Diskon 5%"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="Terapkan Diskon" onAction="#applyDiscount"/>
    </HBox>
    <HBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Button text="Bayar Langsung" onAction="#payWithCash"/>
        <Button text="Bayar dengan Kartu Kredit" onAction="#payWithCreditCard"/>
    </HBox>
</VBox>
